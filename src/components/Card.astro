---
const { icon, title, text } = Astro.props;
---

<div class="rounded-xl bg-gray-100 p-10 dark:bg-white dark:bg-opacity-5">
  <div
    class="h-8 w-8 rounded-full bg-black bg-opacity-10 p-1.5 text-black dark:bg-white dark:bg-opacity-10 dark:text-white"
  >
    <img alt={title} src={icon} />
  </div>
  <div class="mt-4">
    <h3 class="text-lg font-medium dark:text-white">{title}</h3>
    <p class="mt-2 text-base font-medium text-gray-500 dark:text-gray-400">
      {text}
    </p>
  </div>
</div>
