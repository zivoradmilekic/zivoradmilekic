---
import "../styles.css";

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="selection:bg-primary selection:text-white dark:selection:bg-secondary dark:selection:text-black"
>
  <head>
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icon-192x192.png" />
    <link rel="theme-color" href="#fff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="robots" content="index,follow" />
    <meta property="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="profile" />
    <meta property="profile:first_name" content="Živorad" />
    <meta property="profile:last_name" content="Milekić" />
    <meta property="profile:username" content="zivoradmilekic" />
    <meta property="profile:gender" content="male" />
    <meta
      property="og:image"
      content="https://zivoradmilekic.net/images/open-graph-image-dark.jpg"
    />
    <meta property="og:image:alt" content="Živorad Milekić og-image" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org/",
        "@type": "Person",
        "name": "Živorad Milekić",
        "url": "https://zivoradmilekic.net",
        "image": "https://zivoradmilekic.net/images/zm-headshot.jpg",
        "sameAs": [
          "https://www.facebook.com/zivoradmilekic/",
          "https://github.com/zivoradmilekic",
          "https://www.linkedin.com/in/zivoradmilekic/",
          "https://zivoradmilekic.net"
        ],
        "jobTitle": "Full-stack developer"  
      }
    </script>
  </head>
  <body class="bg-white dark:bg-black">
    <slot />
  </body>
</html>
